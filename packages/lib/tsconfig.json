{
  "extends": "@internal/shared-config/tsconfig-lib",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@internal/utils": ["../utils/src/index.ts"],
      "@internal/utils/*": ["../utils/src/*"],
      "@nap5/gnrng-id-wasm": ["../crates/gnrng-id/pkg"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../crates/gnrng-id/pkg"
  ],
  "references": [
    {
      "path": "../utils"
    }
  ]
}
